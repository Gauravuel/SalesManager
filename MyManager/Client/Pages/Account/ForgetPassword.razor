@page "/forgetpassword"
@inherits ForgetPasswordBase
<div class="container-fluid">
    <div class="row forgetrow d-flex justify-content-center align-items-center">
        <div class="col-md-4 bg-white forgetcolumn shadow">
            <h3 class="forgetbanner">Enter your registered Email.</h3>
            <EditForm Model="@ForgetPasswordEmail" OnValidSubmit="handleSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="email">Email</label>
                    <InputText type="text" class="form-control" id="email" @bind-Value="ForgetPasswordEmail.Email" placeholder="Email" />
                    <ValidationMessage For="@(()=>ForgetPasswordEmail.Email)" />
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="forgetbtn">Continue</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>