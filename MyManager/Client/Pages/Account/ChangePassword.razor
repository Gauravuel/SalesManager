@page "/changepassword"

@inherits ChangePasswordBase
<div class="container-fluid">

    <div class="row newpassrow d-flex justify-content-center align-items-center">
        <div class="col-md-4 bg-white newpasscolumn">
            <h3 class="newpassbanner">Change Password</h3>
            <EditForm Model="@changePasswordModel" OnValidSubmit="handleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="form-group">
                    <label for="prevpass">Previous Password</label>
                    <InputText type="password" class="form-control" id="prevpass" @bind-Value="changePasswordModel.PrevPassword" placeholder="Previous Password" />
                    <ValidationMessage For="@(()=>changePasswordModel.PrevPassword)" />
                </div>
                <div class="form-group">
                    <label for="cupass">Current Password</label>
                    <InputText type="password" class="form-control" id="cupass" @bind-Value="changePasswordModel.Password" placeholder="Current Password" />
                    <ValidationMessage For="@(()=>changePasswordModel.Password)" />
                </div>
                <div class="form-group">
                    <label for="confPassword"> Confirm-Password</label>
                    <InputText type="password" class="form-control" id="confPassword" @bind-Value="changePasswordModel.ConfirmPassword" placeholder="Confirm-Password" />
                    <ValidationMessage For="@(()=>changePasswordModel.ConfirmPassword)" />
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="newpassbtn">Submit</button>
                </div>
            </EditForm>


        </div>
    </div>
</div>
