@page "/login"
@layout NullLayout
@inherits LoginBase

<div class="main">
    <div class="login_wrapper">
        <div class="form">
            <div class="column">
                <h3 class="loginbanner">Login</h3>
                <EditForm Model="@Login" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="Email">Email address</label>
                        <InputText type="email" class="form-control" @bind-Value="Login.UserName" id="Email"  placeholder="Enter email" />
                        <ValidationMessage For="@(()=>Login.UserName)" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <InputText type="password" class="form-control" @bind-Value="Login.Password" id="Password" placeholder="Password" />
                        <ValidationMessage For="@(()=>Login.Password)" />
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="loginbtn">Submit</button>
                    </div>

                </EditForm>
                <div class="d-flex justify-content-center mt-3">
                    <NavLink class="nav-link" href="forgetpassword">
                        <span class="forgetpass"> Forget Password ?</span>
                    </NavLink>
                </div>

            </div>
        </div>
        <div class="image">          
            <img src="Images/SVG/login.svg" alt="login svg" class="svg_image" />
        </div>
    </div>
</div>
